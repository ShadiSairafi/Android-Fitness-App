<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardElevation="2dp"
    android:orientation="horizontal"
    android:backgroundTint="@color/purple"
    card_view:cardCornerRadius="8dp">

    <!-- ImageView to show the class image -->
    <ImageView
        android:id="@+id/cardClassImage"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/lines_button_pic_foreground" />

    <LinearLayout
        android:layout_marginStart="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/cardClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Name"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardClassTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Time"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cardClassDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Details"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
